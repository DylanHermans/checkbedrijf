<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity"
    android:background="@drawable/default_wallpaper">

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TxtZoekWaarde2"
        android:hint="bedrijf, naam of BTW nummer"
        android:backgroundTint="#fffffdfb"
        android:autoText="false"
        android:background="#fffbfffb"
        android:textColor="#ff000000"
        android:layout_below="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:lines="1"
        android:longClickable="true"
        android:maxLines="1"
        android:layout_toStartOf="@+id/ButZoeken2"
        android:singleLine="true"
        android:layout_alignBottom="@+id/ButZoeken2"
        android:layout_toLeftOf="@+id/ButZoeken2"
        android:cursorVisible="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/logo" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="zoeken"
        android:id="@+id/ButZoeken2"
        android:layout_below="@+id/imageView2"
        android:layout_alignRight="@+id/imageView2"
        android:layout_alignEnd="@+id/imageView2" />



    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/progressBar2"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/TxtDataView2"
        android:textColor="#ff000000"
        android:background="#AFFF"
        android:layout_marginTop="9dp"
        android:layout_below="@+id/TxtZoekWaarde2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:scrollbars = "vertical"
        android:layout_alignRight="@+id/ButZoeken2"
        android:layout_alignEnd="@+id/ButZoeken2"/>
        //android:autoLink="web"
        //android:linksClickable="true"


</RelativeLayout>
